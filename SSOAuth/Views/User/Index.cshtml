@model List<SSOAuth.Models.VMs.UserAccessVM>
@{
    ViewData["Title"] = "Index";
}

<h1>List User</h1>
<div class="row">
    <div class="col-lg-12">
        <div class="pull-right col-lg-2">
            <a href="@Url.Action("Create")">Add User</a>
        </div>

        <div class="col-lg-10">
            @{
                int sNo = 0;
            }

            <table class="table">
                <thead>
                    <tr>
                        <th>
                            S #
                        </th>
                        <th>
                            User Login
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        sNo++;

                        <tr>
                            <td>
                                @sNo
                            </td>
                            <td>
                                @item.UserName
                            </td>
                            <td>
                                <a href="@Url.Action("Edit" , new  { id= item.Id })">Edit</a>
                            </td>
                        </tr>

                    }

                </tbody>

            </table>

        </div>
    </div>

</div>


